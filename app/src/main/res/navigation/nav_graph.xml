<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_dest">

    <fragment
        android:id="@+id/home_dest"
        android:name="com.chenchen.bee_rider.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="Home" >

        <action
            android:id="@+id/next_action_history"
            app:destination="@+id/history_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/history_dest"
        android:name="com.chenchen.bee_rider.ui.OrderHistoryFragment"
        android:label="history" />

    <fragment
        android:id="@+id/history_detail"
        android:name="com.chenchen.bee_rider.ui.order_detail.OrderDetailFragment"
        android:label="detail" />
</navigation>