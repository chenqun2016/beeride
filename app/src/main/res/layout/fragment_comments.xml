<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:background="@color/color_F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            app:contentScrim="@color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_title_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="1"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round10dp_white"
                    android:paddingTop="25dp"
                    android:paddingBottom="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/tv_point1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="4.9分"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_FF6200"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_point1"
                        android:text="综合评分"
                        android:textColor="@color/color_9E9E9E"
                        android:textSize="12sp"/>

                    <View
                        android:id="@+id/view_line"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_point1"
                        android:layout_width="1px"
                        android:layout_height="60dp"
                        android:background="@color/color_d8d8d8"/>

                    <TextView
                        android:id="@+id/tv_point2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/view_line"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/tv_point3"
                        android:text="10%"
                        android:layout_marginTop="8dp"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_FF6200"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_point3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toLeftOf="@+id/tv_point4"
                        app:layout_constraintLeft_toRightOf="@+id/tv_point2"
                        app:layout_constraintTop_toTopOf="@+id/tv_point2"
                        android:text="10%"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_FF6200"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_point4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_point3"
                        app:layout_constraintTop_toTopOf="@+id/tv_point2"
                        android:text="10%"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_FF6200"
                        android:textSize="16sp"/>


                    <TextView
                        android:id="@+id/tv_cha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/view_line"
                        app:layout_constraintTop_toBottomOf="@+id/tv_point2"
                        app:layout_constraintRight_toLeftOf="@+id/tv_yiban"
                        android:text="非常差"
                        android:layout_marginTop="2dp"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_9E9E9E"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_yiban"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toLeftOf="@+id/tv_caozhan"
                        app:layout_constraintLeft_toRightOf="@+id/tv_cha"
                        app:layout_constraintTop_toTopOf="@+id/tv_cha"
                        android:text="一般"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_9E9E9E"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_caozhan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_yiban"
                        app:layout_constraintTop_toTopOf="@+id/tv_cha"
                        android:text="超赞"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_9E9E9E"
                        android:textSize="12sp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="*每周一00:00更新评价数据，若有延迟，请来耐心等待"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.chenchen.bee_rider.view.TitleView
                android:id="@+id/titleView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="用户评价"
                app:layout_collapseMode="pin"
                app:contentColor="white"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="#FEFFFFFF"
            android:elevation="0dp"
            android:minHeight="40dp"
            app:tabMode="scrollable"
            app:layout_collapseMode="pin"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/color_FF6200"
            app:tabTextColor="@color/color_9E9E9E" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>