<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/icon_guanbi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/color_282626"
        android:text="重置密码"/>


    <com.bee.rider.view.ClearEditText
        android:id="@+id/ed_user_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/color_282626"
        android:textColorHint="@color/color_ccc"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EDEDED" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_user_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:background="@color/transparent"
            android:maxLength="10"
            android:gravity="center_vertical"
            android:textColor="@color/color_282626"
            android:textColorHint="@color/color_ccc"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="16sp" />


        <com.bee.rider.view.SendCodeView
            android:id="@+id/code_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EDEDED" />

    <com.bee.rider.view.MyPasswordView
        android:id="@+id/ed_user_pass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:textCursorDrawable="@drawable/cursor" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EDEDED" />


    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_gradient_grey_round"
        android:gravity="center"
        android:text="确认"
        android:textSize="17sp"
        android:textColor="@color/white"/>
</LinearLayout>


