<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_time"
        android:text="06-08 10:32"
        android:textColor="@color/color_BFC2CC"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_touxiang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_icon"
        android:layout_marginStart="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@+id/iv_icon"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="7dp"
        android:background="@drawable/bg_grey_corner8"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_1"
            android:text="系统通知"
            android:textSize="18sp"
            android:textColor="@color/color_3C3838"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_2"
            android:text="*"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#606266"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/color_F5F5F5"/>

        <TextView
            android:id="@+id/tv_3"
            android:text="立即查看"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="#909399"
            android:drawableEnd="@drawable/icon_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>