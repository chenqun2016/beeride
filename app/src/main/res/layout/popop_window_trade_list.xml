<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fffffe"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_3C3838"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="交易日期"/>

    <com.chenchen.bee_rider.view.RadioGroupPlus
        android:id="@+id/rp_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/bg_trade_shaixuan"
                android:textColor="@drawable/color_trade_shaixuan"
                android:button="@null"
                android:gravity="center"
                android:text="近一年"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/bg_trade_shaixuan"
                android:textColor="@drawable/color_trade_shaixuan"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:gravity="center"
                android:text="近六月"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rb_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/bg_trade_shaixuan"
                android:textColor="@drawable/color_trade_shaixuan"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:gravity="center"
                android:text="近三月"
                android:textSize="13sp" />

        </LinearLayout>
    </com.chenchen.bee_rider.view.RadioGroupPlus>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_7C7877"
            android:layout_gravity="center_horizontal"
            android:text="2020/01/01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_7C7877"
            android:layout_gravity="center_horizontal"
            android:text=" —— "/>

        <TextView
            android:id="@+id/tv_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_7C7877"
            android:layout_gravity="center_horizontal"
            android:text="2020/07/30"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_3C3838"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="交易日期"/>


    <com.chenchen.bee_rider.view.RadioGroupPlus
        android:id="@+id/rp_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_11"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/bg_trade_shaixuan"
                android:textColor="@drawable/color_trade_shaixuan"
                android:button="@null"
                android:gravity="center"
                android:text="全部"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rb_22"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/bg_trade_shaixuan"
                android:textColor="@drawable/color_trade_shaixuan"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:gravity="center"
                android:text="充值"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_111"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/bg_trade_shaixuan"
                android:textColor="@drawable/color_trade_shaixuan"
                android:button="@null"
                android:gravity="center"
                android:text="收入"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rb_222"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/bg_trade_shaixuan"
                android:textColor="@drawable/color_trade_shaixuan"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:gravity="center"
                android:text="支出"
                android:textSize="13sp" />
        </LinearLayout>
    </com.chenchen.bee_rider.view.RadioGroupPlus>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="45dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:text="重置"
            android:textColor="@color/color_FF6200"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/btn_stroke_yellow" />

        <TextView
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/btn_gradient_yellow_round"
            />
    </LinearLayout>

</LinearLayout>