<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:background="@drawable/bg_round10dp_white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:text="今日数据"
            android:textColor="@color/color_2c2c2c"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="14dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_raking"
            android:text="当前排名：1"
            android:textColor="@color/color_888888"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view_line"
            android:background="@drawable/dash"
            android:layout_marginTop="14sp"
            android:layout_marginStart="14sp"
            android:layout_marginEnd="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_1"
            android:text="已完成"
            android:textSize="12sp"
            android:textColor="@color/color_2c2c2c"
            android:layout_marginStart="50dp"
            android:layout_marginTop="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_1_text"
            android:text="234"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_FF6200"
            app:layout_constraintRight_toRightOf="@+id/tv_1"
            app:layout_constraintBottom_toTopOf="@+id/tv_1"
            android:layout_marginBottom="4dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_2"
            android:text="已取消"
            android:textSize="12sp"
            android:textColor="@color/color_2c2c2c"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_2_text"
            android:text="34"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_FF6200"
            app:layout_constraintTop_toTopOf="@+id/tv_1_text"
            app:layout_constraintBottom_toBottomOf="@+id/tv_1_text"
            app:layout_constraintRight_toRightOf="@+id/tv_2"
            app:layout_constraintLeft_toLeftOf="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tv_3"
            android:text="已超时"
            android:textSize="12sp"
            android:textColor="@color/color_2c2c2c"
            android:layout_marginEnd="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_3_text"
            android:text="4"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_FF6200"
            app:layout_constraintTop_toTopOf="@+id/tv_1_text"
            app:layout_constraintBottom_toBottomOf="@+id/tv_1_text"
            app:layout_constraintRight_toRightOf="@+id/tv_3"
            app:layout_constraintLeft_toLeftOf="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>