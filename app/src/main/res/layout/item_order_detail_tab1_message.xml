<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round10dp_white"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="17sp"
            android:textColor="@color/color_282525"
            android:textStyle="bold"
            android:text="配送信息"/>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            android:layout_marginTop="10dp"
            android:background="@drawable/dash"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="@color/color_888888"
            android:text="送达时间"/>

        <TextView
            android:id="@+id/tv_time_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="@color/color_282525"
            android:text="尽快送达"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            android:textSize="15sp"
            android:textColor="@color/color_888888"
            android:text="收货地址"/>

        <TextView
            android:id="@+id/tv_address_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_address"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            android:gravity="right"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="@color/color_282525"
            android:text="信建大厦12楼1205室\n曾海波(先生)18500132492"/>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_address_des"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            android:textSize="15sp"
            android:textColor="@color/color_888888"
            android:text="配送方式"/>

        <TextView
            android:id="@+id/tv_type_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="@color/color_282525"
            android:text="趣鲜蜂专送"/>

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_type"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line4"
            android:textSize="15sp"
            android:textColor="@color/color_888888"
            android:text="配送专员"/>

        <TextView
            android:id="@+id/tv_people_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line4"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:textColor="@color/color_282525"
            android:text="张三丰"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round10dp_white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="17sp"
            android:textColor="@color/color_282525"
            android:textStyle="bold"
            android:text="订单信息"/>

        <View
            android:id="@+id/line11"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_2"
            android:layout_marginTop="10dp"
            android:background="@drawable/dash"/>

        <TextView
            android:id="@+id/tv_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line11"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="@color/color_888888"
            android:text="订单号"/>

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line11"
            android:gravity="right"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="@color/color_FF6200"
            android:text="复制"/>


        <View
            android:id="@+id/line"
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@+id/tv_copy"
            app:layout_constraintTop_toTopOf="@+id/tv_copy"
            app:layout_constraintBottom_toBottomOf="@+id/tv_copy"
            android:background="@color/color_ccc"/>


        <TextView
            android:id="@+id/tv_ordernum_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/line"
            app:layout_constraintTop_toBottomOf="@+id/line11"
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/color_282525"
            android:text="3939892797AWUE122"/>

        <View
            android:id="@+id/line22"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_ordernum_des"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line22"
            android:textSize="15sp"
            android:textColor="@color/color_888888"
            android:text="支付方式"/>




        <TextView
            android:id="@+id/tv_pay_type_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line22"
            android:gravity="right"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="@color/color_282525"
            android:text="在线米粒支付"/>


        <View
            android:id="@+id/line33"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pay_type_des"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line33"
            android:textSize="15sp"
            android:textColor="@color/color_888888"
            android:text="下单时间"/>

        <TextView
            android:id="@+id/tv_pay_time_des"
            android:layout_width="0dp"
            android:gravity="right"
            app:layout_constraintLeft_toRightOf="@+id/tv_pay_time"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line33"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="@color/color_282525"
            android:text="2020-07-23 18:00:11"/>

        <View
            android:id="@+id/line44"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pay_time_des"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line44"
            android:textSize="15sp"
            android:textColor="@color/color_888888"
            android:text="订单备注"/>

        <TextView
            android:id="@+id/tv_beizhu_des"
            android:layout_width="0dp"
            android:gravity="right"
            app:layout_constraintLeft_toRightOf="@+id/tv_beizhu"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line44"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="@color/color_282525"
            android:text="不能太辣"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>