<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dian"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/point_grey" />

    <TextView
        android:id="@+id/step_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/dian"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/color_222222"
        android:text="提交订单" />

    <TextView
        android:id="@+id/step_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/step_title"
        app:layout_constraintTop_toBottomOf="@+id/step_title"
        android:layout_marginTop="6dp"
        android:lineSpacingMultiplier="1.3"
        android:textSize="12sp"
        android:textColor="@color/color_888888"
        tools:text="2022-1-9" />
    <View
        android:id="@+id/left_line"
        android:layout_width="1dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/dian"
        app:layout_constraintRight_toRightOf="@+id/dian"
        app:layout_constraintTop_toBottomOf="@+id/dian"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/color_d8d8d8" />



</androidx.constraintlayout.widget.ConstraintLayout>